.container {
  padding-bottom: 120rpx;
}

/* 封面图样式 */
.cover-image {
  width: 100%;
  height: 400rpx;
}

/* 基本信息区域样式 */
.info-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  padding-right: 160rpx;
}

.status-tag {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-active {
  background: #e1f5fe;
  color: #3498db;
}

.status-ended {
  background: #f5f5f5;
  color: #999;
}

.info-list {
  margin-top: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.info-item text {
  font-size: 28rpx;
  color: #666;
}

.copy-tip {
  font-size: 24rpx;
  color: #3498db !important;
  margin-left: 10rpx;
}

/* 活动详情区域样式 */
.detail-section, .notice-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #3498db;
}

.detail-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

/* 标签样式 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.tag {
  padding: 6rpx 20rpx;
  background: #f0f5ff;
  color: #3498db;
  font-size: 24rpx;
  border-radius: 20rpx;
  margin: 0 16rpx 16rpx 0;
}

/* 相关活动样式 */
.related-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.related-list {
  white-space: nowrap;
  margin-top: 20rpx;
}

.related-item {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.related-image {
  width: 100%;
  height: 160rpx;
}

.related-info {
  padding: 16rpx;
}

.related-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.related-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 报名须知样式 */
.notice-item {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.6;
  padding-left: 30rpx;
  position: relative;
}

.notice-item::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 16rpx;
  width: 8rpx;
  height: 8rpx;
  background: #3498db;
  border-radius: 50%;
}

/* 评论区域样式 */
.comment-section {
  background: #fff;
  padding: 30rpx;
  padding-bottom: 200rpx;
  margin-bottom: 20rpx;
}

.comment-list {
  margin-top: 20rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s ease;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-item:active {
  background: #fafafa;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  border: 1rpx solid #f0f0f0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.username {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
  margin-top: 8rpx;
}

.empty-comment {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 评论输入区域样式 */
.comment-input-section {
  position: fixed;
  bottom: 127rpx;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 24rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
  display: flex;
  align-items: center;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  border-radius: 50px;
background: linear-gradient(145deg, #cacaca, #f0f0f0);
box-shadow:  20px 20px 60px #bebebe,
             -20px -20px 60px #ffffff;
}

.input-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.word-count {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 166rpx;
  top: 50%;
  transform: translateY(-50%);
}

.send-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 0 24rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  transition: all 0.3s ease;
  min-width: 100rpx;
  text-align: center;
  background-color: #306fe0;
}

.send-btn.active {
  color: #fff;
  background: #3498db;
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.2);
}

/* 底部按钮样式 */
.bottom-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
  height: 100rpx;
}

.signup-btn {
  background: #3498db;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
}

.signup-btn.disabled {
  background: #ccc;
}

/* 收藏按钮样式 */
.collect-btn {
  position: fixed;
  right: 30rpx;
  bottom: 338rpx;
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease-in-out;
  opacity: 1;
  transform: translateX(0);
}

.collect-btn.hidden {
  opacity: 0;
  transform: translateX(100rpx);
  pointer-events: none;
}

.collect-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

.collect-btn text {
  font-size: 20rpx;
  color: #666;
}

.collect-btn.collected {
  background: #fff5f5;
}

.collect-btn.collected text {
  color: #ff4d4f;
}

/* 签到按钮样式 */
.checkin-btn {
  position: fixed;
  right: 30rpx;
  bottom: 592rpx;
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease-in-out;
  opacity: 1;
  transform: translateX(0);
}

.checkin-btn.hidden {
  opacity: 0;
  transform: translateX(100rpx);
  pointer-events: none;
}

.checkin-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

.checkin-btn text {
  font-size: 20rpx;
  color: #666;
}

.checkin-btn.checked {
  background: #f6ffed;
}

.checkin-btn.checked text {
  color: #52c41a;
}

.signup-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 倒计时样式 */
.countdown {
  display: flex;
  align-items: center;
  margin: 30rpx;
  padding: 16rpx 24rpx;
  background: rgba(82, 196, 26, 0.1);
  border-radius: 8rpx;
}

.countdown-label {
  font-size: 24rpx;
  color: #389e0d;
  margin-right: 10rpx;
}

.countdown-time {
  font-size: 24rpx;
  color: #389e0d;
  font-weight: bold;
}

/* 提醒按钮样式 */
.remind-btn {
  position: fixed;
  right: 30rpx;
  bottom: 472rpx;
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease-in-out;
  opacity: 1;
  transform: translateX(0);
}

.remind-btn.hidden {
  opacity: 0;
  transform: translateX(100rpx);
  pointer-events: none;
}

.remind-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

.remind-btn text {
  font-size: 20rpx;
  color: #666;
}

.remind-btn.reminded {
  background: #fff7e6;
}

.remind-btn.reminded text {
  color: #fa8c16;
}

/* 报名状态栏 */
.signup-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
}

.signup-info {
  flex: 1;
  margin-right: 20rpx;
}

.progress-bar {
  height: 6rpx;
  background: #f5f5f5;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  width: 100%;
}

.progress-inner {
  height: 100%;
  background: linear-gradient(to right, #40a9ff, #73d13d);
  transition: width 0.3s ease;
  min-width: 0;
  max-width: 100%;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
}

.signup-btn {
  min-width: 180rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(to right, #1890ff, #40a9ff);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 0;
  padding: 0 40rpx;
  text-align: center;
  transition: opacity 0.3s ease;
}

.signup-btn:active {
  opacity: 0.8;
}

.signup-btn.disabled {
  background: #f5f5f5;
  color: #999;
  pointer-events: none;
} 
