<view class="container">
  <view class="form-group">
    <view class="form-item">
      <text class="label">学校</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入学校名称" 
        value="{{formData.school}}"
        bindinput="onInputSchool"
      />
    </view>

    <view class="form-item">
      <text class="label">班级</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入班级" 
        value="{{formData.className}}"
        bindinput="onInputClass"
      />
    </view>

    <view class="form-item">
      <text class="label">学号</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入学号" 
        value="{{formData.studentId}}"
        bindinput="onInputStudentId"
      />
    </view>

    <view class="form-item">
      <text class="label">手机号码</text>
      <input 
        class="input" 
        type="number" 
        placeholder="请输入手机号码" 
        value="{{formData.phone}}"
        bindinput="onInputPhone"
        maxlength="11"
      />
    </view>
  </view>

  <button class="submit-btn" bindtap="handleSave">保存</button>
</view>           