.container {
  padding: 30rpx;
  background: #f5f5f5;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

/* 反馈类型样式 */
.feedback-type {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.type-list {
  display: flex;
  flex-wrap: wrap;
}

.type-item {
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.type-item.active {
  background: #3498db;
  color: #fff;
}

/* 反馈内容样式 */
.feedback-content {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.content-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.word-count {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传样式 */
.upload-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.upload-list {
  display: flex;
  flex-wrap: wrap;
}

.upload-item, .upload-btn {
  width: 180rpx;
  height: 180rpx;
  margin: 10rpx;
  position: relative;
}

.upload-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 20rpx;
  font-size: 32rpx;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.upload-btn image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.upload-btn text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 联系方式样式 */
.contact-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.contact-input {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-size: 28rpx;
}

/* 提交按钮样式 */
.submit-btn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background: #3498db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.submit-btn.disabled {
  background: #ccc;
} 