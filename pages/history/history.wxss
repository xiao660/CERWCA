.container {
  padding: 20rpx;
  background: #f5f5f5;
}

/* 月份选择器样式 */
.month-picker {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 历史记录列表样式 */
.history-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.history-item {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.history-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
  padding-bottom: 0;
}

.history-date {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.date {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.history-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activity-info {
  flex: 1;
}

.activity-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.activity-location {
  font-size: 26rpx;
  color: #666;
}

.status-tag {
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.status-finished {
  background: #e1f5fe;
  color: #3498db;
}

.status-cancelled {
  background: #ffeaea;
  color: #ff4d4f;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
} 