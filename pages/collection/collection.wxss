.container {
  padding: 20rpx;
  background: #f5f5f5;
}

/* 活动列表样式 */
.collection-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.activity-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
}

.activity-info {
  flex: 1;
  margin-left: 20rpx;
  padding-right: 80rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-row image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.info-row text {
  font-size: 26rpx;
  color: #666;
}

.status-tag {
  position: absolute;
  right: 100rpx;
  top: 20rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-active {
  background: #e1f5fe;
  color: #3498db;
}

.status-ended {
  background: #f5f5f5;
  color: #999;
}

/* 取消收藏按钮样式 */
.uncollect-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx;
}

.uncollect-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-activity {
  background: #3498db;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
} 