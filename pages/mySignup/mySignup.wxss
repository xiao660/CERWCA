.container {
  min-height: 100vh;
  background: #fff;
  padding: 20rpx;
}

.signup-list {
  background: #fff;
}

.signup-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 左侧图标 */
.activity-cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  /* background: #3498db; */
  border: 1rpx solid;
  flex-shrink: 0;
}

/* 右侧内容区域 */
.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.activity-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.info-row {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: flex;
  align-items: flex-start;
}

.info-row:last-child {
  margin-bottom: 0;
}

/* 状态标签 */
.action-area {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  padding-left: 20rpx;
  flex-shrink: 0;
}

.signup-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}
.cancel-btn{
  font-size: 24rpx;
}
.status-active {
  color: #2ecc71;
}

.status-cancelled {
  color: #999;
}

.action-btn {
  font-size: 24rpx;
  color: #e74c3c;
  margin-top: 10rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-state image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 26rpx;
  color: #999;
}

/* 标题样式 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333;
}

.header-count {
  font-size: 24rpx;
  color: #999;
}

/* 状态切换标签 */
.status-tabs {
  display: flex;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
}

.tab-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 30rpx;
  position: relative;
}

.tab-item.active {
  color: #3498db;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -11rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: #3498db;
} 
